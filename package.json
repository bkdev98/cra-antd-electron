{
  "name": "cra-antd-electron",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-test": "react-app-rewired test",
    "react-eject": "react-app-rewired eject",
    "develop": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000/ && DEV_URL=http://localhost:3000/ electron .\"",
    "build": "yarn react-build && yarn dist:mac && yarn dist:win",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win --x64 --ia32",
    "prebuild": "rm -rf ./build && rm -rf ./dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "main": "src/main.js",
  "homepage": "./",
  "build": {
    "appId": "vn.innoteq.example",
    "productName": "Your App",
    "copyright": "Copyright Â© 2019 Innoteq Vietnam",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "src/assets/images/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/**/*",
      "public/**/*",
      "src/assets/images/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "antd": "^3.19.3",
    "babel-plugin-import": "^1.12.0",
    "customize-cra": "^0.2.13",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "react": "^16.8.6",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^18.3.7",
    "electron-builder": "^20.43.0",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
